import requests
import pandas as pd
import bs4

# Importamos las librerias necesarias para conectar a la base y manipular la info

id_museo = 'cultura_4207def0-2ff7-41d5-9095-d42ae8207a5d'
url_museo = 'https://datos.gob.ar/dataset/cultura-mapa-cultural-espacios-culturales/archivo/'
web1 = url_museo + id_museo

# Seteamos la web de los museos
r = requests.get(web1, auth=('user', 'pass'))

# conectamos
r.status_code

#check status
r.headers['content-type']
'application/json; charset=utf8'
r.text
soup = bs4.BeautifulSoup(r.text)
soup

soup.select('title')
# Extraemos los 'h ref'
for a in soup.find_all('a',href=True):
    print("Found the URL:",a['href'])
    
